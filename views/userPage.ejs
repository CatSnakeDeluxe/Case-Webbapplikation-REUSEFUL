<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/style.css">
    <link rel="stylesheet" href="../public/css/userPage.css">
    <script src="https://kit.fontawesome.com/bf456a88d2.js" crossorigin="anonymous"></script>

    <title>Document</title>
</head>
<body>
    <%- include("./partials/header.ejs") %>

    <h2 class="flex pageHeading">User Page</h2>

    <% locals.UserAds.forEach(Ad => { %>
        <div class="ad">
            <div class="optionsDiv flex">
                <i class="fa-solid fa-pencil"></i>
                <i class="fa-regular fa-trash-can"></i>
            </div>
            <div class="flex titleCategory">
                <div>
                    <h3 class="title"><%= Ad.title %></h3>
                    <p class="category"><%= Ad.category %></p>
                </div>
                <h4 class="price"><%= Ad.price %></h4>
            </div>
            <p><%= Ad.visibility %></p>
        </div>
    <% }) %>

    <script>
        setTimeout(() => {
        const msg = document.getElementById("serverMessage");
        msg.style.display = "none";
        }, 5000);
    </script>
</body>
</html>