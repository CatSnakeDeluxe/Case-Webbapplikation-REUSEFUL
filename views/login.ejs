<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/style.css">
    <link rel="stylesheet" href="../public/css/form.css">
    <script src="https://kit.fontawesome.com/bf456a88d2.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <div class="flex pageHeading">
        <a href="/ads"><i class="fa-solid fa-arrow-left"></i></a>
        <h2 class="pageHeading">Log In</h2>
    </div>
    <form class="flex" action="/login" method="post">
        <input type="text" name="username" id="username" placeholder="Username">
        <input type="password" name="password" id="password" placeholder="Password">

        <input type="submit" value="Let's Go">
    </form>
    <div class="flex notAUserYet">
        <h6>Not a user yet?</h6>
        <a class="btn register" href="/login/register">Create Account</a>
    </div>
</body>
</html>